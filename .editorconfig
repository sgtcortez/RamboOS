root = true

[*]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
charset = utf-8

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{c,h}]
indent_style = space
indent_size = 4

[*.asm]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = false